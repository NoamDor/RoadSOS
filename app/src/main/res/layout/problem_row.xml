<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/problem_row_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/problem_row_car_img"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.288"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/problem_row_type_img"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/problem_row_type_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        app:layout_constraintEnd_toStartOf="@+id/problem_row_status_img"
        app:layout_constraintStart_toStartOf="@+id/problem_row_address_tv"
        app:layout_constraintTop_toBottomOf="@+id/problem_row_type_tv"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/problem_row_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/problem_row_type_img"
        app:layout_constraintEnd_toEndOf="@+id/problem_row_type_img"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/problem_row_type_img"
        app:layout_constraintTop_toBottomOf="@+id/problem_row_address_tv" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/problem_row_layout" />

    <TextView
        android:id="@+id/problem_row_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/problem_row_status_img"
        app:layout_constraintEnd_toEndOf="@+id/problem_row_status_img"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/problem_row_status_img"
        app:layout_constraintTop_toBottomOf="@+id/problem_row_address_tv" />

    <ImageView
        android:id="@+id/problem_row_status_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/problem_row_address_tv"
        app:layout_constraintTop_toBottomOf="@+id/problem_row_status_tv"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/problem_row_address_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/problem_row_delete_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/problem_row_type_tv"
        app:srcCompat="@drawable/ic_delete"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/problem_row_edit_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/problem_row_type_img"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_edit"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/problem_row_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/problem_row_close_btn"
        app:layout_constraintStart_toEndOf="@+id/problem_row_status_img"
        app:layout_constraintTop_toBottomOf="@+id/problem_row_status_tv"
        app:srcCompat="@drawable/ic_checkbox"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/problem_row_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/problem_row_status_img"
        app:layout_constraintTop_toBottomOf="@+id/problem_row_confirm_btn"
        app:srcCompat="@drawable/ic_close"
        tools:ignore="VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>